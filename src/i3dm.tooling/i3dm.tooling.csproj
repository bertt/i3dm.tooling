<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>0.1</Version>
    <Authors>Bert Temme</Authors>
    <Description>Tooling for pack/unpack/info on i3dm file</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/bertt/i3dm.tooling</PackageProjectUrl>
    <RepositoryUrl>https://github.com/bertt/i3dm.tooling</RepositoryUrl>
    <PackageReleaseNotes>initial release</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.8.0" />
    <PackageReference Include="i3dm.tile" Version="0.1.0" />
    <PackageReference Include="SharpGLTF.Toolkit" Version="1.0.0-alpha0018" />
  </ItemGroup>

  <ItemGroup>
    <None Update="tree.i3dm">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
